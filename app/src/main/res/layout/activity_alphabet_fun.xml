<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_screen"
    android:fitsSystemWindows="true"
    tools:context=".AlphabetFunActivity">

    <ImageView
        android:id="@+id/back_button"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="Alphabet Fun"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/back_button"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/back_button"
        app:layout_constraintTop_toTopOf="@+id/back_button" />

    <ImageView
        android:id="@+id/textView6"
        android:layout_width="133dp"
        android:layout_height="42dp"
        android:layout_marginEnd="-15dp"
        android:src="@drawable/coin_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:srcCompat="@drawable/whitedesign" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="9dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:srcCompat="@drawable/coin" />

    <TextView
        android:id="@+id/total_coin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="1994"
        android:textColor="@color/white"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView6" />

    <TextView
        android:id="@+id/total_que"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/poppins_medium"
        android:text="5"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/alphabet_fun_qst"
        android:layout_width="336dp"
        android:layout_height="69dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/question_white_bg"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center"
        android:text="A"
        android:textColor="@color/gray"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_que" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="90dp"
        android:layout_height="69dp"
        android:layout_marginStart="-15dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/alphabet_fun_qst"
        app:layout_constraintStart_toStartOf="@+id/alphabet_fun_qst"
        app:layout_constraintTop_toTopOf="@+id/alphabet_fun_qst"
        app:srcCompat="@drawable/yellow_curve_bg" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Q1"
        android:textColor="@color/gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/alphabet_fun_qst"
        app:layout_constraintStart_toStartOf="@+id/alphabet_fun_qst"
        app:layout_constraintTop_toTopOf="@+id/alphabet_fun_qst" />


    <Button
        android:id="@+id/alphabet_opt_a"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/op_a"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:paddingStart="65dp"
        android:text="4"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/alphabet_fun_qst"
        app:layout_constraintTop_toBottomOf="@+id/alphabet_fun_qst" />

    <Button
        android:id="@+id/alphabet_opt_b"
        android:layout_width="288dp"
        android:layout_height="56dp"
        android:background="@drawable/op_b"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:paddingStart="65dp"
        android:text="B"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alphabet_opt_a"
        app:layout_constraintTop_toTopOf="@+id/alphabet_opt_a" />


    <Button
        android:id="@+id/alphabet_opt_c"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:background="@drawable/op_c"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:paddingStart="65dp"
        android:text="a"
        android:textAllCaps="false"
        android:layout_marginTop="26dp"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/alphabet_opt_a"
        app:layout_constraintTop_toBottomOf="@+id/alphabet_opt_a" />


    <Button
        android:id="@+id/alphabet_opt_d"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:background="@drawable/op_d"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center_vertical"
        android:paddingStart="65dp"
        android:text="d"
        android:textAllCaps="false"
        android:textColor="@color/gray"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/alphabet_opt_c"
        app:layout_constraintTop_toTopOf="@+id/alphabet_opt_c" />

    <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:layout_marginBottom="72dp"
            android:background="@color/gray"
            android:backgroundTint="@color/gray"
            app:cardCornerRadius="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/btnHint"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:srcCompat="@drawable/hint_icon" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins"
            android:text="Hint"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/cardView2"
            app:layout_constraintStart_toStartOf="@+id/cardView2"
            app:layout_constraintTop_toBottomOf="@+id/cardView2" />

        <TextView
            android:id="@+id/hintBubble"
            android:layout_width="252dp"
            android:layout_height="185dp"
            android:background="@drawable/hint_bg"
            android:layout_marginEnd="15dp"
            android:paddingTop="32dp"
            android:layout_marginBottom="-15dp"
            android:text="If you count up from 5 \n which of the given option \n would you say next"
            android:textAlignment="center"
            android:textColor="#363642"
            android:textSize="14sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@+id/cardView2"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="/"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/total_que"
        app:layout_constraintTop_toTopOf="@+id/total_que" />

    <TextView
        android:id="@+id/current_que"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

</androidx.constraintlayout.widget.ConstraintLayout>