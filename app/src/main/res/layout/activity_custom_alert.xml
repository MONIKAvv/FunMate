<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/background_screen"
        android:fitsSystemWindows="true"
    tools:context=".CustomAlert">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="710dp"
            android:layout_height="673dp"
            app:cardCornerRadius="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/alert_icon"
                    android:layout_width="204dp"
                    android:layout_height="204dp"
                    android:layout_marginTop="150dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/correct_icon" />

                <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="211dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Congratulations"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    app:layout_constraintEnd_toEndOf="@+id/alert_icon"
                    app:layout_constraintStart_toStartOf="@+id/alert_icon"
                    app:layout_constraintTop_toBottomOf="@+id/alert_icon" />

                <TextView
                    android:id="@+id/alert_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:text="Woohoo! You’ve won “Reward”"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="@+id/alert_title"
                    app:layout_constraintStart_toStartOf="@+id/alert_title"
                    app:layout_constraintTop_toBottomOf="@+id/alert_title" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/close_alert"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="@+id/cardView"
            app:layout_constraintStart_toStartOf="@+id/cardView"
            app:layout_constraintTop_toBottomOf="@+id/cardView"
            app:srcCompat="@drawable/close_icon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
