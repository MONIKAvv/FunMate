<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <color android:color="#1c1c26"/>
    </item>
<!--    top left gray color-->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="0"
                android:centerY="0"
                android:startColor="#363642"/>
        </shape>
    </item>
<!--    bottom right-->
    <item android:left="0dp" android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="1"
                android:centerY="1"
                android:startColor="#363642" />
        </shape>
    </item>

</layer-list>